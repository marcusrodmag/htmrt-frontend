{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "jinja": true,
            "env": {
                "FLASK_APP": "src/setup.py",
                "RUN_PORT": "6000",
                "API_VERSION": "0.0.1",
